= form_for(user, :html => {:class => 'form-horizontal'}) do |f|
  %fieldset
    .control-group
      %label.control-label{:for => "user_email"} Email
      .controls
        = f.text_field :email
    .control-group
      %label.control-label{:for => "user_time_zone"} Zona horaria
      .controls
        = f.time_zone_select("time_zone", ActiveSupport::TimeZone.all.sort )
    .form-actions
      = f.submit "Actualizar", :class => 'btn btn-success'
      = link_to "Cancelar", :back, :class => 'btn btn-success'